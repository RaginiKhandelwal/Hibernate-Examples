<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
<class name="com.groupsusers.Groups" table="Groups">

<id name="groupId" column="groupId" >
<generator class="increment"/>
</id>
<property name="grpName" column="grpName"  />
 
 <set name="users" cascade="all" inverse="false" table="groups_users"  >
 <key column="group_Id"/>
 <many-to-many class="com.groupsusers.Users" column="user_Id"></many-to-many>
 </set>

</class>
</hibernate-mapping> 